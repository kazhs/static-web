form-item-base()
  appearance: none
  border: none
  outline: none

  [disabled]
    cursor: not-allowed


placeholder-color($color)
  &:placeholder-shown
    color: $color

  &::-webkit-input-placeholder
    color:$color

  &:-moz-placeholder
    color:$color
    opacity: 1

  &::-moz-placeholder
    color:$color
    opacity: 1

  &:-ms-input-placeholder
    color:$color

